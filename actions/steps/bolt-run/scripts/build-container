#!/usr/bin/env bash

# This file is automatically generated by the Nebula SDK. DO NOT EDIT.

set -euo pipefail

#
# Commands
#

DOCKER="${DOCKER:-docker}"

#
# Variables
#

DOCKER_ARGS="${DOCKER_ARGS:-}"
DOCKER_BUILD_ARGS="${DOCKER_BUILD_ARGS:-}"

#
#
#

declare -a TAGS

while getopts ':t:' OPTNAME; do
  case "${OPTNAME}" in
  t)
    TAGS+=( "${OPTARG}" )
    ;;
  \?)
    echo "Unrecognized option: -${OPTARG}" >&2
    exit 1
    ;;
  esac
done

shift $(( OPTIND - 1 ))


$DOCKER $DOCKER_ARGS build $DOCKER_BUILD_ARGS --tag sdk.nebula.localhost/intermediate/010343a500bd/puppet-bolt-step-bolt-run --file Dockerfile .

for TAG in ${TAGS[@]+"${TAGS[@]}"}; do
  $DOCKER $DOCKER_ARGS tag sdk.nebula.localhost/intermediate/010343a500bd/puppet-bolt-step-bolt-run "relaysh/puppet-bolt-step-bolt-run:${TAG}" && \
    printf "# Tagged %s:%s\n" relaysh/puppet-bolt-step-bolt-run "${TAG}"
done
